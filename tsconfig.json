{
    "compilerOptions": {
        "target": "es2015",
        "lib": [
            "dom",
            "es7",
            "dom.iterable",
            "scripthost"
        ],
        "moduleResolution": "node",
        "module": "es2015",
        "downlevelIteration": true,
        "declaration": true,
        "removeComments": false,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "src/*.ts"
    ]
}
